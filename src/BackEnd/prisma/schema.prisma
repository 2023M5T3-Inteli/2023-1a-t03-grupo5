// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  projectId           String    @id
  name                String
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  tasks               String
  description         String
  start               DateTime?
  end                 DateTime?
  coleaderId          String?
  coleader            User?     @relation("Coleader", fields: [coleaderId], references: [id])
  ownerId             String
  owner               User      @relation("Owner", fields: [ownerId], references: [id], onDelete: Cascade)
  projectType         String
  blockedSubscription Boolean   @default(false)

  @@map("projects")
}

model Tags {
  id   String @id
  name String

  @@map("tags")
}

model User {
  id               String    @id
  email            String    @unique
  name             String?
  password         String
  bornDate         DateTime
  gender           String
  n_dell           String
  managerId        String
  habilities       String
  projects         Project[] @relation("Owner")
  projectsColeader Project[] @relation("Coleader")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@map("users")
}

model Habilitie {
  id   String @id
  name String

  @@map("habilities")
}
