// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id                  String    @id
  name                String
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  tasks               String
  start               DateTime?
  end                 DateTime?
  coleaderId          String?
  ownerId             String
  owner               User      @relation(fields: [ownerId], references: [id])
  projectType         String
  blockedSubscription Boolean   @default(false)
}

model Task {
  id   String @id
  name String
}

model User {
  id         String    @id
  email      String    @unique
  name       String?
  password   String
  bornDate   DateTime
  gender     String
  n_dell     String
  managerId  String
  habilities String
  projects   Project[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

}

model Habilitie {
  id   String @id
  name String
}
